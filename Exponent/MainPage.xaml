<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Exponent.MainPage">
        <VerticalStackLayout>
        <Label Text = "Вычислим степень числа"/>
        <HorizontalStackLayout>
            <Entry
                x:Name="Base"
                Placeholder="8"/>
            <Label Text = "^"/>
            <Entry
                x:Name="Exponent"
                Placeholder="2"/>
            <Label Text = " = "/>
            <Label 
                x:Name="Answer"
                Text = "64"/>
        </HorizontalStackLayout>
            <Button
                x:Name="CulculatBtn"
                Text="Посчитать" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
</ContentPage>
